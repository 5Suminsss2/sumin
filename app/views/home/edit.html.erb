<form action="/home/update/<%=@editpost.id%>" method='post'>
  <div class="form-group">
    <label for="exampleInputEmail1">제목</label>
    <input name="title" value="<%=@editpost.title%>" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="제목을 입력">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">내용</label>
    <input name="content" value="<%=@editpost.content%>" type="text" class="form-control" id="exampleInputPassword1" placeholder="내용을 입력">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>